@model IEnumerable<FPT_OnlineService.Models.Semester>

@{
    ViewBag.Title = "Semester";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
