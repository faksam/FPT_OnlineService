<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FU Online Student Service</title>
    @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
            <link href="~/Content/font-awesome-4.6.1/css/font-awesome.css" rel="stylesheet" />
            <link href="~/Content/font-awesome-4.6.1/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="body">
        <div class="body-content">
            <div class="container-fluid" style="width:auto; padding-left:10px;">
                <img src="/images/FPT-Header.png" usemap="#planetmap" />
                <map name="planetmap">
                    <area shape="rect" coords="158,9,580,82" href="/" alt="Home">
                </map>
            </div>
            <div class="navbar navbar-custom navbar-fixed">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav pull-right">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
                <div class="container body-content">
                    <div>
                        <aside id="sticky-social">
                            <ul>
                                <li><a target="_blank" href="https://www.facebook.com/international.fpt" class="fa fa-facebook"><span>Facebook</span></a></li>
                                <li><a target="_blank" href="https://en.wikipedia.org/wiki/FPT_University" class="fa fa-wikipedia-w"><span>Wiki</span></a></li>
                                <li><a target="_blank" href="https://www.youtube.com/user/FPTUniversityChannel" class="fa fa-youtube-play"><span>Youtube</span></a></li>
                            </ul>
                        </aside>

                    </div>
                    @RenderBody()
                    <hr />
                    <footer>
                        <p style="text-align:right;">&copy; @DateTime.Now.Year - FU Online Student Service</p>
                    </footer>
                </div>
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/custom")
                @RenderSection("scripts", required: false)
            </div>
    </div>
</body>
</html>
