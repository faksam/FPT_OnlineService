@model FPT_OnlineService.Models.User

@{
    ViewBag.Title = "Edit Staff Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Staff Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Fill in staff e-mail next to a role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Campus Director:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" id="campusDirector" name="campusDirector" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Academic Head:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" id="acadHead" name="acadHead" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
        </div>
        <div class="form-group">
            @Html.Label("Head Of Academic Department:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" id="headAcadDept" name="headAcadDept" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
        </div>
        <div class="form-group">
            @Html.Label("Academic Staff:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" id="acadStaff" name="acadStaff" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
